{
  "name": "figma-flow-extractor",
  "version": "1.0.0",
  "description": "Extract prototype interactions and flow information from Figma",
  "main": "dist/code.js",
  "scripts": {
    "build": "npm run build:plugin && npm run build:server",
    "build:plugin": "tsc -p tsconfig.json && cp src/plugin/ui.html dist/plugin/",
    "build:server": "tsc -p tsconfig.server.json",
    "watch": "tsc -p tsconfig.json --watch",
    "watch:plugin": "concurrently \"tsc -p tsconfig.json --watch\" \"npm run copy-ui\"",
    "copy-ui": "cp src/plugin/ui.html dist/plugin/ui.html",
    "dev": "concurrently \"npm run watch\" \"npm run server\"",
    "server": "npx ts-node src/server/index.ts",
    "start:server": "node dist/server/index.js"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.100.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ws": "^8.14.2"
  }
}
